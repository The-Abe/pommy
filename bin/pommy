#!/usr/bin/env ruby

require 'curses'

trap("SIGINT") { exit 0 }

Curses.init_screen
Curses.start_color

Curses.init_pair(Curses::COLOR_GREEN,Curses::COLOR_WHITE,Curses::COLOR_GREEN) 
Curses.init_pair(Curses::COLOR_RED,Curses::COLOR_WHITE,Curses::COLOR_RED)


while true
  Curses.curs_set(0)
  now = Time.now
  future = now + 25*60

  while now < future
    width = Curses.cols
    now = Time.now
    difference = future - now
    difference = 0 if difference < 0
    minutes = (difference/60).to_i
    seconds = (difference%60).floor
    seconds = "0#{seconds}" if seconds < 10
    percentage = (difference/(25*60/100))
    negative_percentage = 100 - percentage
    done_blocks = (negative_percentage/100.0*width).round
    undone_blocks = width-done_blocks
    percentage_text = "#{"%3.2f" % negative_percentage}% #{minutes}:#{seconds}"
    Curses.clear
    Curses.setpos(0,0)
    Curses.addstr "Pomodoro"
    Curses.setpos(2,0)
    green_text = percentage_text[0,done_blocks]
    red_text = percentage_text[-(percentage_text.length - done_blocks),( percentage_text.length - done_blocks)] || ""
    done_blocks = done_blocks - green_text.length
    done_blocks = 0 if done_blocks < 0
    undone_blocks = undone_blocks - red_text.length
    undone_blocks = 0 if undone_blocks < 0
    Curses.attron(Curses.color_pair(Curses::COLOR_GREEN)|Curses::A_NORMAL){
      Curses.addstr "#{green_text}#{" "*done_blocks}"
    }
    Curses.attron(Curses.color_pair(Curses::COLOR_RED)|Curses::A_NORMAL){
      Curses.addstr "#{red_text}#{" "*undone_blocks}"
    }
    Curses.refresh
    sleep(0.1)
  end
  Curses.setpos(3,0)
  Curses.addstr "Pomodoro ended. Press a key to restart"
  Curses.refresh
  Curses.getch
end
